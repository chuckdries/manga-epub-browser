<h1>Search for a manga by title</h1>
<form method="get" action="/search">
  <p>search the following sources:</p>
  <ul>
    {{#each sources}}
      <li>{{name}} - {{lang}}</li>
    {{/each}}
  </ul>
  <input type="text" name="title" />
  <button type="submit">Search</button>
</form>

<h2>Books</h2>
<table style="width: 100%">
  <tr>
    <th>Title</th>
    <th>Author</th>
    <th>Status</th>
  </tr>
  {{#each books}}
  <tr>
    <td>{{title}}</td>
    <td>{{author}}</td>
    <td>{{bookStatus status}}</td>
  </tr>
  {{/each}}
</table>